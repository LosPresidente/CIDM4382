extends layout

block content
  .row.banner
    .col-12
      h1 Pizza Place
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
          p.rating
            i.fas.fa-star
            i.fas.fa-star
            i.fas.fa-star
            i.far.fa-star
            i.far.fa-star
          p 23rd Street, Canyon, TX, 79015
          .card.card-primary
            .card-block
              h2.card-title Opening hours
              p.card-text Monday - Friday : 7:00am - 7:00pm
              p.card-text Saturday : 10:00am - 1:00am
              p.card-text Sunday : 10:00am - 1:00am
          .card.card-primary
            .card-block
              h2.card-title Facilities
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Pizza
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Bathroom
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;WiFi
              | &nbsp;
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
              h2.card-title Location map
              //-
              img.img-fluid.rounded(src='#{<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3268.9242064777063!2d-101.91843323445443!3d34.98356317552314!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xd49dbebadf403843!2sDomino&#39;s%20Pizza!5e0!3m2!1sen!2sus!4v1569182085946!5m2!1sen!2sus" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>}')
